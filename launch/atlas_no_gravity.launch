<launch>
  <arg name="gzname" default="gazebo"/>
  <arg name="gzworld" default="$(find vrc-golem)/worlds/atlas_no_gravity.world"/>
  <arg name="extra_gazebo_args" default="" />

  <!-- Enable cheats -->
  <env name="VRC_CHEATS_ENABLED" value="1"/>

  <param name="/use_sim_time" type="bool" value="true"/>

  <!-- start gazebo with the Atlas and record the gazebo log -->
  <node name="gazebo" pkg="atlas_utils" type="run_$(arg gzname)" args="$(arg gzworld) $(arg extra_gazebo_args)" output="screen" />
</launch>
  

